# Disable startup screen
startup_message off

# More term colors
term xterm-256color

# Enable scroll back
defscrollback 1000
termcapinfo xterm|xterms|xs|rxvt ti@:te@

# Allow bold colors
attrcolor b ".I"

# Screen colors
termcapinfo xterm 'Co#256:AB=\E[38;5;%dm:AF=\E[138;5;%dm'

# Setup windows
screen -t SysMonitor 0 glances
screen -t Python 9 python
screen -t Vim 8 vim
screen -t Proccessing2 7
screen -t Proccessing 6
screen -t Testing 5
screen -t Spare3 4
screen -t Spare2 3
screen -t Spare 2
screen -t Main 1

