### Dunst ###
#############

[global]
    ###############
    ### Display ###
    ###############
    # Monitor for notifications
    monitor = 0
    # Display on focused monitor (mouse/keyboard/none)
    follow = mouse



    ###############################
    ### Notifacation appearence ###
    ###############################
    # Geometry of window [{width}]x{height}[+/-{x}+/-{y}]
    geometry = "300x5-30+20"
    # Show hidden message amount
    indicate_hidden = yes
    # Shrink window if smaller than widt, ignored if width=0
    shrink = no
    # Window transparency
    transparency = 15
    # Height of notification
    notification_height = 0
    # Separator size
    separator_height = 2
    # Padding between text and separator
    padding = 8
    # Horizontal padding.
    horizontal_padding = 8
    # Frame pixel width around notification
    frame_width = 0
    # Corner radius
    corner_radius = 10
    # Frame color around notification
    frame_color = "#663399"
    # Seperator colors
    separator_color = frame
    # Sort messages by urgency.
    sort = yes
    # Dont remove if idleing for x seconds (0 to disable)
    idle_threshold = 60
    # Combine notifications of same content
    stack_duplicates = true
    # Hide stacked notifications count of same content
    hide_duplicate_count = false
    # Display indicators ((U)rl/(A)ctions)
    show_indicators = yes



    ############
    ### Text ###
    ############
    # Font type
    font = Monospace 8
    # Spacing between lines
    line_height = 0
    # Message text alignmnt (left/right)
    alignment = left
    # Vertical alignment of message text and icon (top/center/bottom)
    vertical_alignment = center
    # Show age of message if message over (-1 to disable)
    show_age_threshold = 0
    # Split notifications if not fitting into geometry
    word_wrap = yes
    # If word_wrap=no, specify location long lines ellipses (start/middle/end)
    ellipsize = middle
    # Ignore newlines '\n' in notifications.
    ignore_newline = no



    #############
    ### Icons ###
    #############
    # Align icons (left/right/off)
    icon_position = right
    # Set min icon size
    min_icon_size = 0
    # Set max icon size
    max_icon_size = 32
    # Icon filepath
    icon_path = /usr/share/icons/gnome/16x16/status/:/usr/share/icons/gnome/16x16/devices/



    ###############
    ### History ###
    ###############
    # Notifications recalled from history will not time out automatically
    sticky_history = yes
    # Maximum notification amount history save
    history_length = 20



    #############
    ### Mouse ###
    #############
    # Define list of actions by mouse (none/do_action/close_current/close_all)
    mouse_left_click = close_current
    mouse_middle_click = do_action, close_current
    mouse_right_click = do_action



    #####################
    ### Misc/Advanced ###
    #####################
    # dmenu path
    dmenu = /usr/bin/dmenu -p dunst:
    # Always run rule-defined scripts, even if notifications suppressed
    always_run_script = true
    # Define title of windows dunst spawns
    title = Dunst
    # Define class of windows dunst spawns
    class = Dunst
    # Startup notifacation
    startup_notification = false
    # Ignore dbus closeNotification message
    ignore_dbusclose = false
    # Use Xinerama extension instead of RandR for multi-monitor support
    force_xinerama = false



    #################
    ### Shortcuts ###
    #################
[shortcuts]
    # Close notification
    close = ctrl+space

    # Close all notifications
    close_all = ctrl+shift+space




    ##############
    ### Colors ###
    ##############
[urgency_low]
    frame_color = "#331177"
    background = "#663399"
    foreground = "#FFFFFF"
    timeout = 20
[urgency_normal]
    frame_color = "#331177"
    background = "#663399"
    foreground = "#FFFFFF"
    timeout = 20
[urgency_critical]
    frame_color = "#220044"
    background = "#442288"
    foreground = "#FFFFFF"
    timeout = 40
